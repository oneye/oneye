	return true;
}

function service_vfs_isGroupDir($params) {
	if(!is_dir($params[0])) {
		$dir = dirname($params[0]);
	} else {
		$dir = $params[0];
	}
	$group = realpath(EYE_ROOT.'/'.GROUPS_DIR.'/');
