*	false.
* @date 2008/03/11
*/
function service_vfs_checkSpecialChars($params){
	$fileName = $params[0];
	global $charBlackList;
	foreach($charBlackList as $char){
		if ( /* utf8 */ strpos($fileName, $char) !== false) {
